@page "/login/"
@layout LoginLayout

<form method="post" class="form">
    @if (!string.IsNullOrEmpty(_error))
    {
        <div class="alert alert-danger" role="alert">
            @_error
        </div>
    }
    <div class="input-group mb-3">
        <input type="text" name="@nameof(_loginForm.UserName)" @bind-value="_loginForm.UserName" class="form-control">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-user"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <input type="password" name="@nameof(_loginForm.Password)" @bind-value="_loginForm.Password" class="form-control">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <!--
        <div class="icheck-primary">
        <input type="checkbox" id="remember">
        <label for="remember">
            <Language key="Lưu mật khẩu" Page="Login"></Language>
        </label>
    </div>
    -->

        </div>
        <!-- /.col -->
        <div class="col-4">
            
            <button type="button" @onclick="Login" class="btn btn-primary btn-block"><Language Key="Đăng nhập" Page="Login"></Language></button>
        </div>
        <!-- /.col -->
    </div>
</form>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Init();
        }
    }
}
